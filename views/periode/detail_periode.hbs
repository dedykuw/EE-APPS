{{#if periode}}
    <div class="row">
        <div class="col-lg-4">
            <div class="ibox ">
                <div class="ibox-title">
                    <span class="label label-success float-right">Total Pagu</span>
                    <h5>{{periode.nama}}</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">Rp. {{periode.PAGU}}</h1>
                    <small>Total Pagu</small>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>{{periode.nama}}</h5>
                    <div class="ibox-tools">
                        <span class="label label-primary">Pagu Tersedia</span>
                    </div>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">Rp. {{periode.totalAvailablePagu}}</h1>
                    <small>Pagu yang tersedia</small>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>{{periode.nama}}</h5>
                    <div class="ibox-tools">
                        <span class="label label-warning">Pagu Terpakai</span>
                    </div>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">Rp. {{periode.totalPaguUnit}}</h1>
                    <small>Pagu yang teranggarkan untuk unit</small>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="ibox ">
                <div class="ibox-content">
                    <div>
                                        <span class="float-right text-right">Detal berdasarkan persentase</span>
