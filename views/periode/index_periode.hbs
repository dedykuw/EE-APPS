<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>List Periode </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#" class="dropdown-item">Config option 1</a>
                        </li>
                        <li><a href="#" class="dropdown-item">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover periode-table" >
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Periode</th>
                            <th>Status</th>
                            <th>Pagu</th>
                            <th>Pagu Unit</th>
                            <th>Detail</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#if periode.length}}
                            {{#each periode}}
                                <tr class="gradeX">
                                    <td>{{this.periode_id}}</td>
                                    <td>{{this.nama}}</td>
                                    <td> {{#if this.status}} Aktif {{else}} Tidak aktif {{/if}} </td>
                                    <td>{{this.PAGU}}</td>
                                    <td>{{this.totalPaguUnit}}</td>
                                    <td>{{this.periode_id}}</td>
                                </tr>
                             {{/each}}
                        {{/if}}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Periode</th>
                            <th>Status</th>
                            <th>Pagu</th>
                            <th>Pagu Unit</th>
                            <th>Detail</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- PAGE LEVEL JS -->
{{#section 'script'}}

    <script type="application/javascript">
        $(function() {
            $('.periode-table').DataTable({
                "columnDefs": [
                    {
                        "targets": [ 0 ],
                        "visible": false,
                        "searchable": false
                    },
                    {
                        "targets": [ 5 ],
                        render: data=> {
                            return `<a href="/periode/detail/${data}">Detail</a>`
                        }
                    },
                ],
                order: [[ 0, "desc" ]],
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy'},
                    {extend: 'csv'},
                    {extend: 'excel', title: 'List_Periode'},
                    {extend: 'pdf', title: 'List_Periode'},

                    {extend: 'print',
                        customize: function (win){
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ]

            });
        });
    </script>

{{/section}}