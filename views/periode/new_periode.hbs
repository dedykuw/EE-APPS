<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">Penambahan Periode Baru</h4>
            <form method="POST" action="/periode/new">
                <div class="form-group">
                    <label for="exampleInputEmail1">Periode</label>
                    <input type="hidden" name="_csrf" value="{{_csrf}}">
                    <input type="text" class="form-control" id="periode" name="{{fields.NAMA}}" required>
                    <small  class="form-text text-muted">Nama periode haruslah unik, contoh: 2018/2019.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Pagu</label>
                    <input type="text" class="form-control" id="periode" name="{{fields.PAGU}}" required>
                    <small  class="form-text text-muted">Nilai pagu dalam rupiah.</small>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="activate" name="{{fields.STATUS}}" value="active">
                    <label class="form-check-label" for="activate">Aktifkan Periode Ini</label>
                </div>
                <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Submit</button>
            </form>
        </div>
    </div>
</div>